/* pages/train/train.wxss */
.content{
  height: 500px;
  background-color: #f4f4f4;
}

.formbg{
  width: 92%;

  background-color: #fff;

  margin: 0 auto;
  padding-top: 20px;
  padding-bottom: 10px;
}

.station, .date{
  display: flex;
  flex-direction: row;
  width: 90%;

  margin: 0 auto;
  text-align: center;

  justify-content: center;
}
.station view{
  /* border: 1px red solid; */
  height: 50px;
  line-height: 45px;
  font-size: 20px;
  width: 33%;
}

.station input{
  height: 10px;
}

.hr{
  height: 1px;

  background-color: #cccccc;
  opacity: 0.5;
  margin-top: 5px;
  margin-bottom: 5px;
}

.btn{
  font-size: 16px;
  
  color: #ffffff;
  background-color: #5495e6;

  border-radius: 5px;
}

.record{
  text-align: center;
  margin-top: 10px;
  font-size: 14px;
  color: #999999;
}

.record text{
  margin-right: 20px;
}

/****************其他******************/
.query-box {
  flex-direction: column;
  padding: 0 40rpx;
  background-color: #fff;
}

.query-row {
  padding: 30rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.query-history {
  width: 100%;
  /* display: flex; */
}

.query-history scroll-view {
  height: 70rpx;
  white-space:nowrap;
}

.query-history text {
  margin: 20rpx 20rpx 20rpx 0;
  display: inline-block;
  font-size: 30rpx;
  color: #999999;
}

.query-head{
  height: 100rpx;
  padding: 0 40rpx;
  /*background-color: #898989;
  opacity: 0.9;*/
  /* background: url("../../images/tab-bg.png"); */
  margin-top: -35rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-radius: 20rpx 20rpx 0 0;
}
.tab{
    width:50%;
    text-align: center;
    line-height: 100rpx;
    font-size: 40rpx;
    color:white;
}

.tag{
  /* background: url("../../images/tab.png"); */
  background-size: cover;
  margin-top: -10rpx;
  padding-top: 10rpx;
  color:black;
  opacity: 1.0;
}

.switch image{
  width: 50px;
  height: 50px;
}
.query-city {
  border-bottom: 1rpx solid #E5E5E5;
}

.begin-city,.end-city{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.begin-city {
  justify-content: flex-start;
}
.end-city {
  justify-content: flex-end;
}
.city{
  font-size: 50rpx;
  font-weight: 900;
}
.city-descript {
  display: block;

  font-size: 16px;
  margin-top: -20px;
  
  color: #A7A7A7;
  font-weight: 600;
}
.query-date{
  padding:40rpx 0;
  border-bottom: 1rpx solid #E5E5E5;
}
.date {
  font-size: 46rpx;
  font-weight: 700;
}
.day {
    color: #5194E6;
    font-weight: 600;
}
.day::after{
    content: " >";
}
.btn-query {
  padding: 0;
}
.btn-query button {
  width:100%;
}
.extension {
  margin: 20rpx 0;
}
.extension image {
  height:100rpx; 
  width: 100rpx;
}
.extension-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.extension-item text {
  font-size: 24rpx;
  margin: 20rpx 0;
  color: #696969;
}