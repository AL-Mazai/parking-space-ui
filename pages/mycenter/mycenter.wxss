/**********************用户信息**********************/
.page-top {    
    width: 100%;
    
    display: flex;
    align-items: center;
    padding: 5px;

    background-color: #5194E6;
}

.page-top .user-avatar {
    width: 80px;
    height: 80px;
    /*将头像设置为圆形 */
    border-radius: 50%;
}

.user-info-and-settings {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-grow: 1;
    /* 让用户信息和设置占据剩余的可用空间 */
    margin-left: 15px;
    margin-right: 15px;
    /* 为用户信息和设置添加一些间距 */
}

.user-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    /* 用户信息左对齐 */

    font-size: 16px;
    color: white;
}

.account-settings {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.settings-label {
    font-size: 14px;
    color: white;
}
.query-box {
    margin-top: -40rpx;
    border-radius: 10rpx 10rpx 0 0 ;
}
.extension {
    margin-bottom: 0;
}
.extension-item text {
    color: black;
}

