/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.logo-container {
  text-align: center;
}

.title {
  font-size: 24px;
  margin-top: 10px;
}

.input-container {
  margin-top: 20px;
}

.input {
  width: 240px;
  height: 30px;
  margin-bottom: 10px;
  padding: 5px 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.login-button {
  width: 280px;
  height: 40px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.login-button:hover {
  background-color: #0056b3;
}