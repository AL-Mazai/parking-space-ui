.record-list {
  height: 500px;
  padding: 5px;
  background-color: #f4f4f4;
}

.record-item {
  height: 60px;

  display: flex;
  justify-content: space-between;
  align-items: center;

  margin-bottom: 10px;
  background-color: #fff;
  border: 1px solid rgb(190, 177, 177);

  border-radius: 5px;
  padding: 5px;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.left-column {
  flex: 1;
}

.start,
.end {
  font-size: 16px;
  color: #333;
  margin-bottom: 5px;
}

.time {
  margin-top: 5px;
}

.right-column {
  text-align: right;
}

.cost {
  font-size: 16px;
  color: #e74c3c;
}