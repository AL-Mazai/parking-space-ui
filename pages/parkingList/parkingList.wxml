<wxs module="strs">
  var nowticket = function (data, date) {
    var n;
    for (var i = 0; i < data.length; i++) {
      if (mysplit(data[i])[0] == date) {
        n = i;
      }
    }
    console.log(mysplit(data[n]));
    return mysplit(data[n]);
  }

  var mysplit = function (s) {
    return s.split(" ");//分割字符串
  }

  module.exports = {
    nowticket: nowticket
  }
</wxs>