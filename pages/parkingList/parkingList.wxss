/****************选择****************/
.sort {
  display: flex;
  align-items: center;
  margin: 10px;
}

.checkbox-label {
  display: flex;
  align-items: center;
  margin-right: 15px; /* 添加间距以分隔多选框 */
}

.checkbox {
  margin-right: 5px;
}

.option {
  font-size: 12px;
  color: #333;
}

/****************数据展示*********************/
.content{
  /* height: 600px; */
  background-color: #f4f4f4;
  padding-top: 10px;
  margin: 0 auto;

  /* border: 1px red solid; */

}
.bg{
  height: 70px;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 5px;
  margin-bottom: 10px;
}
.item{
  display: flex;
  flex-direction: row;

  padding: 10px;
  font-size: 14px;

  /* border: 1px red solid; */

}
.wr{
  flex: 1;
}
.left{
  text-align: left;
}
.center{
  text-align: center;
}
.right{
  text-align: right;
}

.hr{
  height: 1px;
  background-color: #cccccc;
  opacity: 0.5;
}

.line{
  height: 0.5px;
  background-color: grey;
  opacity: 0.3;
  margin: 3px;
}
.blue{
  color: #5495E6;
}
