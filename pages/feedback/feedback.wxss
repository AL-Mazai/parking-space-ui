.feedback-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 5px;
}

.header {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 20px;
}

.feedback-input {
    width: 80%;
    height: 200px;
    border: 1px solid #ccc;
    padding: 10px;
    font-size: 16px;
    margin-bottom: 20px;
}

.submit-button {
    background-color: #007AFF;
    color: #fff;
    font-size: 18px;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
}