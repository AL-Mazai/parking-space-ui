<!--pages/vehicle/vehicle.wxml-->
<view class="container">
  <!-- 搜索框 -->
  <view class="search-container">
    <input class="search-input" placeholder="搜索" bindinput="search"></input>
  </view>

  <!-- 表格 -->
  <view class="table-container">
    <scroll-view scroll-y class="scroll-view">
      <view class="table-header">
        <text class="header-item">图标</text>
        <text class="header-item">车牌号</text>
        <text class="header-item">车主</text>
        <text class="header-item">车主号码</text>
      </view>
      
      <view class="table-content">
        <block wx:for="{{carList}}" wx:key="index">
          <view class="table-row">
            <image class="logo" src="{{item.logo}}"></image>
            <text class="item">{{item.plateNumber}}</text>
            <text class="item">{{item.ownerName}}</text>
            <text class="item">{{item.ownerPhone}}</text>
          </view>
        </block>
      </view>
    </scroll-view>
  </view>
</view>
